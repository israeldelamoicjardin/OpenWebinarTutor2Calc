<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.OpenWebinar2" parent="Base.Theme.OpenWebinar2">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>
    
    <style name="BotonesDeNumeros">
        <item name="android:background">@color/gris</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>

    </style>
    <style name="BotonesDeOperadores">
        <item name="android:background">@color/gris</item>
        <item name="android:textColor">@color/azul</item>
        <item name="android:textSize">32sp</item>
        <item name="textAllCaps">true</item>

    </style>

    <style name="NumeroDePantalla">

        <item name="android:textColor">@color/azul</item>
        <item name="android:textSize">64sp</item>


    </style>

    <style name="separador">
        <item name="android:background">@color/gris</item>
        <item name="android:layout_width">2dp</item>
        <item name="android:elevation">5dp</item>

    </style>

</resources>